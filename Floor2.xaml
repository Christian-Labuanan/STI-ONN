                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="0.917" ScaleY="0.996"/>
                                    <SkewTransform AngleX="-25.764" AngleY="25.825"/>
                                    <RotateTransform Angle="-25.581"/>
